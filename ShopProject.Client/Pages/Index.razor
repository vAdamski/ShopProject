@page "/"
@using ShopProject.Shared.ViewModels
@inject IHttpClientFactory ClientFactory
@inject HttpClient HttpClient


<div class="container-fluid">
    <div class="row">
        <div class="col-3">
            <div class="card">
                <div class="card-header">
                    <h3>Filtry</h3>
                </div>
                <div class="card-body">
                    
                </div>
            </div>
        </div>
        <div class="col-9">
            <div class="container-fluid">
                <div class="row">
                    @foreach (var product in Vm.Products)
                    {
                        <div class="col-12" href="~/product-info/@product.ProductId">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-3">
                                        <img src="https://localhost:6001/api/files/@product.ImageId" style="max-height: 100px"/>
                                    </div>
                                    <div class="col-6">
                                        <h4>@product.ProductName</h4>
                                    </div>
                                    <div class="col-3">
                                        <div>
                                            <h2>@product.ProductPrice.ToString()</h2>
                                            <button class="btn btn-success">Dodaj do koszyka</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="row">
                    <div class="btn-toolbar mb-3" role="toolbar">
                        <div class="btn-group me-2" role="group">
                            @for(int i = 1; i <= Vm.MaxPageNo; i++)
                            {
                                <button type="button" class="@CurrentPageClass(i)">@i</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code
{
    public ProductsViewModel Vm { get; set; } = new();
    
    protected override async Task OnInitializedAsync()
    {
        var NoAuthenticationClient = ClientFactory.CreateClient("ServerAPI.NoAuthenticationClient");
        Vm = await NoAuthenticationClient.GetFromJsonAsync<ProductsViewModel>("https://localhost:6001/api/products/get-products");
    }
    
    private string CurrentPageClass(int pageNo) => Vm.CurrentPageNo == pageNo ? "btn-primary" : "btn-outline-secondary";
}